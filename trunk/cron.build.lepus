#!/bin/bash
# 
# crontab script to build rappture runtime on lepus 
# 

bld_dir=/opt/rappture-runtime/tmp

PATH=$bld_dir/bin:/opt/matlab/bin:$PATH
LD_LIBRARY_PATH=$bld_dir/lib:/opt/matlab/extern/lib:$LD_LIBRARY_PATH

logfile="cronlog.`date +%y%m%d-%H%M`"
cd /opt/rappture-runtime
touch $logfile
echo "path is $PATH" >> $logfile
make cronjob >> $logfile
